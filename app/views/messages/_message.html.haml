.message(data-message-id='#{message.id}')
  .message-user
    = message.user.name
  .message-font
    .message-font__content
      - if message.text.present?
        = message.text
      = image_tag message.image.url if message.image.present?
    .message-font__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")